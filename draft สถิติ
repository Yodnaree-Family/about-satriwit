        const palette = {
            blue: '#003f5c',
            dullBlue: '#374c80',
            purple: '#7a5195',
            magenta: '#bc5090',
            pink: '#ef5675',
            orange: '#ff764a',
            yellow: '#ffa600',
            bgColors: ['rgba(0, 63, 92, 0.7)', 'rgba(188, 80, 144, 0.7)', 'rgba(255, 166, 0, 0.7)', 'rgba(122, 81, 149, 0.7)', 'rgba(255, 118, 74, 0.7)'],
            borderColors: ['#003f5c', '#bc5090', '#ffa600', '#7a5195', '#ff764a']
