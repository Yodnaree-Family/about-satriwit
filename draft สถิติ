            const datasets = [
                 { label: '‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢ (‡πÉ‡∏ô‡πÄ‡∏Ç‡∏ï)', data: years.map(y => dataIn[y].stats.avg), borderColor: palette.borderColors[0], backgroundColor: palette.bgColors[0], tension: 0.1 },
                 { label: '‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢ (‡∏ô‡∏≠‡∏Å‡πÄ‡∏Ç‡∏ï)', data: years.map(y => dataOut[y].stats.avg), borderColor: palette.borderColors[1], backgroundColor: palette.bgColors[1], tension: 0.1 },
